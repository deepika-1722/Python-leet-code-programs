class Solution:
    def romanToInt(self, s):
        # Map of Roman numerals to integers
        roman_map = {
            'I': 1,
            'V': 5,
            'X': 10,
            'L': 50,
            'C': 100,
            'D': 500,
            'M': 1000
        }

        total = 0
        prev_value = 0

        # Traverse the string from right to left
        for char in reversed(s):
            value = roman_map[char]
            if value < prev_value:
                # Subtract if smaller than previous (IV = 4)
                total -= value
            else:
                # Add otherwise
                total += value
            prev_value = value

        return total
